rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if isUser(userId);

      match /quizAttempts/{attemptId} {
        allow read, write: if isUser(userId);
      }
    }
  }

  function isUser(userId) {
    return request.auth != null && request.auth.uid == userId;
  }
}
